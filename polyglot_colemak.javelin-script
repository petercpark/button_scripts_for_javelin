// 4th row

func onPress36() {
  handlePress(SC_L_META, SK_NUM1 | KEY_STENO, SC_L_META, SC_NONE, SC_NONE);
  updateStenoMode();
}
func onRelease36() { handleRelease(SC_L_META, SK_NUM1 | KEY_STENO, SC_L_META, SC_NONE, SC_NONE); }

func onPress37() {
  if (layer != 0) {
    handlePress(SC_NONE, SK_A | KEY_STENO, SC_NONE, SC_NONE, SC_NONE);
  } else {
    otherPressCount = otherPressCount + 1;
    releaseAll();
    setLayer(layer | NAV_MASK);
    pressAll();
  }
}

func onRelease37() {
  if (layer & NAV_MASK) {
    releaseAll();
    setLayer(layer ^ NAV_MASK);
  } else {
    handleRelease(SC_NONE, SK_A | KEY_STENO, SC_NONE, SC_NONE, SC_NONE);
  }
}

func onPress38() { handlePress(SC_R_SHIFT, SK_O | KEY_STENO, SC_NONE, SC_NONE, SC_NONE); }
func onRelease38() { handleRelease(SC_R_SHIFT, SK_O | KEY_STENO, SC_NONE, SC_NONE, SC_NONE); }

