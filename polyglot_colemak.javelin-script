func onPress40() {
  if (layer != 0) {
    handlePress(SC_NONE, SK_U | KEY_STENO, SC_NONE, SC_NONE, SC_NONE);
  } else {
    otherPressCount = otherPressCount + 1;
    releaseAll();
    setLayer(layer | SYMBOL_MASK);
    pressAll();
  }
}

func onRelease40() {
  if (layer & SYMBOL_MASK) {
    releaseAll();
    setLayer(layer ^ SYMBOL_MASK);
  } else {
    handleRelease(SC_NONE, SK_U | KEY_STENO, SC_L_CTRL, SC_NONE, SC_NONE);
  }
}


