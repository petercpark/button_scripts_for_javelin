func onRelease10() { handleRelease(SC_SEMICOLON, SK_TR | KEY_STENO, SC_0 | KEY_SHIFT, SC_NONE, SC_0); }

func onPress11() {
  handlePress(SC_BACKSPACE, SK_DR | KEY_STENO, SC_NONE, SC_NONE, SC_NONE);
  updateStenoMode();
}
func onRelease11() { handleRelease(SC_BACKSPACE, SK_DR | KEY_STENO, SC_NONE, SC_NONE, SC_NONE); }

// 2nd row

func onPress12() {  handlePress(SC_L_CTRL, SK_NONE, SC_NONE, SC_NONE, SC_TAB);}
